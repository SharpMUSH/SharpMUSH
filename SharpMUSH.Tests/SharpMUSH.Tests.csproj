<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <IsPackable>false</IsPackable>
    <IsTestProject>true</IsTestProject>
  </PropertyGroup>

	<PropertyGroup>
		<TreatWarningsAsErrors>True</TreatWarningsAsErrors>
	</PropertyGroup>
	
  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.TestHost" Version="9.0.1" />
    <PackageReference Include="coverlet.collector" Version="6.0.4">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="Microsoft.Testing.Extensions.TrxReport" Version="1.5.3" />
    <PackageReference Include="NSubstitute" Version="5.3.0" />
    <PackageReference Include="Serilog" Version="4.2.0" />
    <PackageReference Include="Serilog.Sinks.Console" Version="6.0.0" />
    <PackageReference Include="Testcontainers.ArangoDb" Version="4.1.0" />
    <PackageReference Include="TUnit" Version="0.11.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\SharpMUSH.Configuration\SharpMUSH.Configuration.csproj" />
    <ProjectReference Include="..\SharpMUSH.Database.ArangoDB\SharpMUSH.Database.ArangoDB.csproj" />
    <ProjectReference Include="..\SharpMUSH.Database\SharpMUSH.Database.csproj" />
    <ProjectReference Include="..\SharpMUSH.Documentation\SharpMUSH.Documentation.csproj" />
    <ProjectReference Include="..\SharpMUSH.Implementation\SharpMUSH.Implementation.csproj" />
    <ProjectReference Include="..\SharpMUSH.MarkupString\SharpMUSH.MarkupString.fsproj" />
    <ProjectReference Include="..\SharpMUSH.Server\SharpMUSH.Server.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="..\SharpMUSH.Documentation\Helpfiles\PennMUSH\pennattr.hlp">
      <Link>Documentation\Testfile\pennattr.hlp</Link>
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
		<Content Include="..\SharpMUSH.Documentation\Helpfiles\PennMUSH\pennchat.hlp">
			<Link>Documentation\Testfile\pennchat.hlp</Link>
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
		<Content Include="Configuration\Testfile\mushcnf.dst">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
  </ItemGroup>

</Project>
