<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Library</OutputType>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

	<PropertyGroup>
		<TreatWarningsAsErrors>True</TreatWarningsAsErrors>
	</PropertyGroup>

	<ItemGroup>
	  <Compile Remove="ANTLR4\**" />
	  <EmbeddedResource Remove="ANTLR4\**" />
	  <None Remove="ANTLR4\**" />
	</ItemGroup>
	
  <ItemGroup>
    <PackageReference Include="Antlr4.Runtime.Standard" Version="4.13.1" />
		<PackageReference Include="Antlr4BuildTasks" Version="12.8" PrivateAssets="all" IncludeAssets="build" />
		<Antlr4 Include="SharpMUSHParser.g4" />
		<Antlr4 Include="SharpMUSHBoolExpParser.g4" />
  </ItemGroup>
	
	<ItemGroup>
		<AssemblyAttribute Include="System.CLSCompliant">
			<_Parameter1>false</_Parameter1>
			<_Parameter1_TypeName>System.Boolean</_Parameter1_TypeName>
		</AssemblyAttribute>
	</ItemGroup>
</Project>
