@page "/wiki/{slug:nonfile}"
@using static SharpMUSH.Portal.Components.WikiView
@inject Slugify.ISlugHelper Slugify

<PageTitle>@Slug</PageTitle>

<SharpMUSH.Portal.Components.WikiView Slug="@Slugified" Mode=@Mode />

@code {
    [Parameter]
    public string? Slug { get; set; }

    [Parameter]
    public required SharpMUSH.Portal.Components.WikiView.WikiMode Mode { get; set; } = WikiMode.View;

    private string Slugified => Slugify.GenerateSlug(Slug ?? string.Empty);
}