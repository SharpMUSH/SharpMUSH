@page "/admin/config/{category}"
@inject NavigationManager Navigation

<PageTitle>@CategoryTitle - Configuration</PageTitle>

<MudContainer MaxWidth="MaxWidth.Large" Class="py-6">
    <MudCard>
        <MudCardHeader>
            <CardHeaderContent>
                <MudText Typo="Typo.h5">@CategoryTitle Configuration</MudText>
            </CardHeaderContent>
        </MudCardHeader>
        <MudCardContent>
            <MudAlert Severity="Severity.Info" Icon="@Icons.Material.Filled.Construction">
                This configuration page is under development.
            </MudAlert>
            <MudText Typo="Typo.body1" Class="mt-4">
                The <strong>@CategoryTitle</strong> configuration section will be available in a future update.
            </MudText>
            <MudText Typo="Typo.body2" Class="mt-2">
                For now, you can configure these settings by editing the configuration file directly.
            </MudText>
        </MudCardContent>
        <MudCardActions>
            <MudButton Variant="Variant.Text" 
                       Color="Color.Primary" 
                       StartIcon="@Icons.Material.Filled.ArrowBack"
                       OnClick="@(() => Navigation.NavigateTo("/admin/config"))">
                Back to Overview
            </MudButton>
        </MudCardActions>
    </MudCard>
</MudContainer>

@code {
    [Parameter]
    public string Category { get; set; } = string.Empty;

    private string CategoryTitle => Category switch
    {
        "database" => "Database",
        "limits" => "Limits",
        "commands" => "Commands",
        "sitelock" => "Sitelock",
        "banned-names" => "Banned Names",
        "restrictions" => "Restrictions",
        "messages" => "Messages",
        "cosmetic" => "Cosmetic",
        "chat" => "Chat",
        "logging" => "Logging",
        "files" => "Files",
        "textfiles" => "Text Files",
        "dumps" => "Database Dumps",
        "attributes" => "Attributes",
        "flags" => "Flags",
        "costs" => "Costs",
        "compatibility" => "Compatibility",
        "aliases" => "Aliases",
        "debug" => "Debug",
        "functions" => "Functions",
        "warnings" => "Warnings",
        _ => Category
    };
}
